{
  "manifest_version": 2,
  "name": "Privatisator",
  "version": "0.2",

  "description": "Adds shortcut to open currently shown page in a private tab.",

  "icons": {
    "32": "icons/privatisator-32x32.png",
    "64": "icons/privatisator-64x64.png"
  },

  "permissions": ["tabs"],
  
  "background": {
    "scripts": [ "background.js" ]
  },

  "commands": {
    "open-in-private": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Open current tab in a private window"
    }
  }
}
